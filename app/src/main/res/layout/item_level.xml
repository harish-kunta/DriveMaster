<?xml version="1.0" encoding="utf-8"?><!-- res/layout/item_level.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLevel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="@drawable/tile_background"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/levelNumber"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:text="99"
        style="@style/LearnPageLevelNumberStyle"/>

    <TextView
        android:id="@+id/levelButton"
        style="@style/LearnPageLevelTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level" />
</LinearLayout>

