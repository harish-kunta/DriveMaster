<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer of the ProgressBar -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="#E5E5E5" /> <!-- Light gray background -->
        </shape>
    </item>

    <!-- Progress layer of the ProgressBar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp" />
                <gradient
                    android:startColor="#FFC800"
                    android:endColor="#FFC800"
                    android:angle="270" />
            </shape>
        </clip>
    </item>

</layer-list>
