<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DriveMaster" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="buttonStyle">@style/GreenButton</item>
    </style>

    <style name="RegularTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="EntryPageTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/textColorTitle</item>
    </style>

    <style name="EntryPageSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#777777</item>
    </style>

    <style name="GreenButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/greenButtonTextColor</item>
        <item name="android:background">@color/greenButtonColor</item>
    </style>

    <style name="SignInPageSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#777777</item>
    </style>

</resources>